<style>
    body {
      font-family: Arial, sans-serif;
      margin: 0;
      padding: 0;
      background-color: #f9f9f9;
      color: #333;
      display: flex;
      justify-content: center;
      align-items: center;
      height: 100vh;
    }

    nav {
      position: absolute;
      top: 0;
      width: 100%;
      background-color: #007bff;
      padding: 10px 20px;
      box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
      display: flex;
      justify-content: flex-end;
    }

    nav a {
      color: white;
      text-decoration: none;
      margin-left: 20px;
      font-weight: bold;
      transition: color 0.3s ease;
    }

    nav a:hover {
      color: #ffdd57;
    }

    .register-container {
      background: white;
      padding: 30px;
      border-radius: 15px;
      box-shadow: 0px 4px 8px rgba(0, 0, 0, 0.1);
      width: 450px;
      text-align: center;
    }

    .login{
      display: inline;
    }

    h1 {
      color: #007bff;
      margin: 20px;

    }

    h2 {
      color: #dc3545;
      margin-bottom: 20px;
      font-size: 1em;
    }

    form {
      display: flex;
      flex-direction: column;
      gap: 15px;
    }

    input[type="text"],
    input[type="email"],
    input[type="password"],
    input[type="file"] {
      padding: 10px;
      border: 1px solid #ddd;
      border-radius: 8px;
      font-size: 1em;
      width: 100%;
    }

    input[type="file"] {
      font-size: 0.9em;
    }

    button {
      padding: 10px 15px;
      border-radius: 8px;
      background: linear-gradient(90deg, #007bff, #0056b3);
      color: white;
      font-size: 1em;
      font-weight: bold;
      border: none;
      cursor: pointer;
      transition: background 0.3s ease, transform 0.2s ease;
    }

    button:hover {
      background: linear-gradient(90deg, #0056b3, #007bff);
      transform: translateY(-2px);
    }

  </style>

<nav>
    <a href="/">Home</a>
    <a href="/login">Login</a>
    <a href="/register">Register</a>
</nav>
<h1>Register for CliquePix</h1>
<h2>{{error}}</h2>
<form method="POST" action="/register" enctype="multipart/form-data">
  username: 
  <input type="text" name="username" required>
  email: 
  <input type="email" name="email" required>
  password: 
  <input type="password" name="password" required>
  profile picture:
  <input type="file" name="profile_pic" required>
  <button type="submit">Register</button>
  <div class="login">
    Have an account? <a href="/login">Login</a>
  </div>
</form>

