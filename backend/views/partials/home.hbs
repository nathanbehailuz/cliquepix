<link rel="stylesheet" href="/css/main-page.css">

<div class="main-container">
    <div class="search-filter-container">
        <div class="search-container">
            {{!-- <input class = "ai-image-search" type="text" placeholder="alice, bob and me">
            <button class = "ai-image-search-btn" >Search</button> --}}
        </div>
        <select class="filter-dropdown">
            <option value="all">All</option>
            <option value="mine">Mine</option>
            <option value="friends">Friends</option>
        </select>   
    </div>
    
    {{#if media.length}}
        <div class="medias-container">
            {{#each media}}
                <div class="media-card">
                    <div class="media-card-header">
                        <img src={{this.ownerProfilePic}} alt=" ">
                        <p>{{this.ownerUsername}}</p>
                        <button class="more-options">
                            <span class="dots">&#8942;</span>
                        </button>
                    </div>
                    <div class="media-card-body">
                        <img src={{this.url}} alt="post image">
                    </div>
                    <div class="media-card-footer">
                        {{!-- <button>Like</button>
                        <button>Comment</button> --}}
                        <div class="media-description">
                            {{!-- <p>Description</p> --}}
                        </div>
                    </div>
                </div>
            {{/each}}
        </div>
    {{else}}
        <p>No images uploaded yet. Go to Create to upload your first image!</p>
    {{/if}}
</div>

<!-- Move friends-container outside main-container -->
<div class="friends-container">
    <div class="friends-header">
        <p>Friends</p>
    </div>  

    <div class="friends-list">
        {{#each friends}}
        <div class="friend-card">
            <img src={{this.profilePic}} alt="friend profile picture">
            <p>{{this.username}}</p>
        </div>
        {{/each}}
    </div>
</div>

