<div class="max-w-6xl mx-auto px-4 py-8">
    <div class="flex flex-col lg:flex-row gap-8">
        <!-- Main Feed -->
        <div class="flex-1">
            <!-- Filter Bar -->
            <div class="bg-white rounded-xl shadow-sm border border-gray-200 p-4 mb-6">
                <div class="flex items-center justify-between">
                    <h2 class="text-xl font-semibold text-gray-800">Your Feed</h2>
                    <div class="flex items-center space-x-4">
                        <select class="filter-dropdown bg-gray-50 border border-gray-300 text-gray-700 py-2 px-4 rounded-lg focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:border-transparent">
                            <option value="all">All Posts</option>
                            <option value="mine">My Posts</option>
                            <option value="friends">Friends' Posts</option>
                        </select>
                    </div>
                </div>
            </div>
            
            <!-- Media Feed -->
            {{#if media.length}}
                <div class="space-y-8">
                    {{#each media}}
                        <div class="bg-white rounded-xl shadow-sm border border-gray-200 overflow-hidden">
                            <!-- Post Header -->
                            <div class="flex items-center justify-between p-4 border-b border-gray-100">
                                <div class="flex items-center space-x-3">
                                    <img src="{{this.ownerProfilePic}}" alt="{{this.ownerUsername}}" class="w-10 h-10 rounded-full object-cover border-2 border-gray-200">
                                    <div>
                                        <h3 class="font-semibold text-gray-800">{{this.ownerUsername}}</h3>
                                        <p class="text-sm text-gray-500">{{this.createdAt}}</p>
                                    </div>
                                </div>
                                <button class="text-gray-400 hover:text-gray-600 p-2 rounded-full hover:bg-gray-100 transition duration-150 ease-in-out">
                                    <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 5v.01M12 12v.01M12 19v.01M12 6a1 1 0 110-2 1 1 0 010 2zm0 7a1 1 0 110-2 1 1 0 010 2zm0 7a1 1 0 110-2 1 1 0 010 2z"></path>
                                    </svg>
                                </button>
                            </div>
                            
                            <!-- Post Image -->
                            <div class="relative">
                                <img src="{{this.url}}" alt="Post image" class="w-full aspect-square object-cover">
                                <div class="absolute top-4 right-4">
                                    <span class="bg-black bg-opacity-50 text-white px-2 py-1 rounded-full text-xs font-medium">
                                        {{this.type}}
                                    </span>
                                </div>
                            </div>
                            
                            <!-- Post Actions -->
                            <div class="p-4">
                                <div class="flex items-center justify-between mb-3">
                                    <div class="flex items-center space-x-4">
                                        <button class="text-gray-600 hover:text-red-500 transition duration-150 ease-in-out">
                                            <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4.318 6.318a4.5 4.5 0 000 6.364L12 20.364l7.682-7.682a4.5 4.5 0 00-6.364-6.364L12 7.636l-1.318-1.318a4.5 4.5 0 00-6.364 0z"></path>
                                            </svg>
                                        </button>
                                        <button class="text-gray-600 hover:text-blue-500 transition duration-150 ease-in-out">
                                            <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 12h.01M12 12h.01M16 12h.01M21 12c0 4.418-4.03 8-9 8a9.863 9.863 0 01-4.255-.949L3 20l1.395-3.72C3.512 15.042 3 13.574 3 12c0-4.418 4.03-8 9-8s9 3.582 9 8z"></path>
                                            </svg>
                                        </button>
                                        <button class="text-gray-600 hover:text-green-500 transition duration-150 ease-in-out">
                                            <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 19l9 2-9-18-9 18 9-2zm0 0v-8"></path>
                                            </svg>
                                        </button>
                                    </div>
                                    <button class="text-gray-600 hover:text-gray-800 transition duration-150 ease-in-out">
                                        <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 5a2 2 0 012-2h10a2 2 0 012 2v16l-7-3.5L5 21V5z"></path>
                                        </svg>
                                    </button>
                                </div>
                                
                                <!-- Likes Count -->
                                <div class="mb-2">
                                    <span class="font-semibold text-gray-800 text-sm">0 likes</span>
                                </div>
                                
                                <!-- Caption -->
                                <div class="text-sm text-gray-800">
                                    <span class="font-semibold">{{this.ownerUsername}}</span>
                                    <span class="ml-2">Shared a {{this.type}}</span>
                                </div>
                            </div>
                        </div>
                    {{/each}}
                </div>
            {{else}}
                <!-- Empty State -->
                <div class="bg-white rounded-xl shadow-sm border border-gray-200 p-12 text-center">
                    <div class="w-24 h-24 mx-auto mb-6 bg-gray-100 rounded-full flex items-center justify-center">
                        <svg class="w-12 h-12 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
                        </svg>
                    </div>
                    <h3 class="text-xl font-semibold text-gray-800 mb-2">No photos yet</h3>
                    <p class="text-gray-500 mb-6">Start sharing memories with your friends!</p>
                    <a href="/create" class="inline-flex items-center px-6 py-3 bg-indigo-600 text-white font-medium rounded-lg hover:bg-indigo-700 transition duration-150 ease-in-out">
                        <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"></path>
                        </svg>
                        Upload Your First Photo
                    </a>
                </div>
            {{/if}}
        </div>
        
        <!-- Friends Sidebar -->
        <div class="lg:w-80">
            <div class="bg-white rounded-xl shadow-sm border border-gray-200 p-6 sticky top-24">
                <h3 class="text-lg font-semibold text-gray-800 mb-4">Your Friends</h3>
                {{#if friends.length}}
                    <div class="space-y-3">
                        {{#each friends}}
                            <div class="flex items-center space-x-3 p-3 rounded-lg hover:bg-gray-50 transition duration-150 ease-in-out cursor-pointer">
                                <img src="{{this.profilePic}}" alt="{{this.username}}" class="w-10 h-10 rounded-full object-cover border-2 border-gray-200">
                                <div class="flex-1 min-w-0">
                                    <p class="text-sm font-medium text-gray-800 truncate">{{this.username}}</p>
                                    <p class="text-xs text-gray-500">Active</p>
                                </div>
                                <div class="w-2 h-2 bg-green-400 rounded-full"></div>
                            </div>
                        {{/each}}
                    </div>
                    <div class="mt-6 pt-4 border-t border-gray-200">
                        <a href="/add-friend" class="w-full flex items-center justify-center px-4 py-2 bg-indigo-50 text-indigo-600 font-medium rounded-lg hover:bg-indigo-100 transition duration-150 ease-in-out">
                            <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M18 9v3m0 0v3m0-3h3m-3 0h-3m-2-5a4 4 0 11-8 0 4 4 0 018 0zM3 20a6 6 0 0112 0v1H3v-1z"></path>
                            </svg>
                            Add Friend
                        </a>
                    </div>
                {{else}}
                    <div class="text-center py-8">
                        <div class="w-16 h-16 mx-auto mb-4 bg-gray-100 rounded-full flex items-center justify-center">
                            <svg class="w-8 h-8 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z"></path>
                            </svg>
                        </div>
                        <h4 class="text-sm font-medium text-gray-800 mb-2">No friends yet</h4>
                        <p class="text-xs text-gray-500 mb-4">Add friends to start sharing photos!</p>
                        <a href="/add-friend" class="inline-flex items-center px-4 py-2 bg-indigo-600 text-white text-sm font-medium rounded-lg hover:bg-indigo-700 transition duration-150 ease-in-out">
                            <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M18 9v3m0 0v3m0-3h3m-3 0h-3m-2-5a4 4 0 11-8 0 4 4 0 018 0zM3 20a6 6 0 0112 0v1H3v-1z"></path>
                            </svg>
                            Add Friend
                        </a>
                    </div>
                {{/if}}
            </div>
        </div>
    </div>
</div>

